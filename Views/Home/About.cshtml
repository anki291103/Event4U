@{
    ViewBag.Title = "About Us";
}

<style>
    /* General Styles */
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    section {
        padding: 60px 20px;
        text-align: center;
        opacity: 0;
        transform: translateY(50px);
        transition: all 0.8s ease-in-out;
    }

    .show {
        opacity: 1;
        transform: translateY(0);
    }

    /* Banner Section */
    .banner {
        width: 100%;
        height: 500px;
        background: url('/Images/aboutus.jpg') no-repeat center center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
    }

    /* Achievements Slider */
    .slider-container, .testimonial-slider {
        overflow: hidden;
        width: 80%;
        margin: auto;
        position: relative;
    }

    .slider, .testimonial-container {
        display: flex;
        transition: transform 1s ease-in-out;
    }

    .slide, .testimonial {
        min-width: 100%;
        box-sizing: border-box;
        text-align: center;
    }

        .slide img {
            width: 400px; /* Increased size */
            height: 300px; /* Increased size */
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .testimonial p {
            background: #2d2d2d; /* Greyish black color */
            color: white;
            padding: 20px;
            border-radius: 10px;
            font-weight: bold;
        }

    /* Navigation Buttons */
    .prev, .next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 50%;
    }

    .prev {
        left: 10px;
    }

    .next {
        right: 10px;
    }
</style>

<!-- Banner Section -->
<div class="banner">About Us</div>

<!-- Team History Section -->
