</section>

<!-- Achievements Section -->
<section class="scroll-reveal">
    <h2>Our Achievements</h2>
    <div class="slider-container">
        <button class="prev" onclick="moveSlide(-1, 'slider')">&#10094;</button>
        <div class="slider" id="slider">
            <div class="slide"><img src="/Images/award1.jpg" alt="Award 1"></div>
            <div class="slide"><img src="/Images/award2.jpg" alt="Award 2"></div>
            <div class="slide"><img src="/Images/award3.jpg" alt="Award 3"></div>
        </div>
        <button class="next" onclick="moveSlide(1, 'slider')">&#10095;</button>
    </div>
</section>

<!-- Testimonials Section -->
<section class="scroll-reveal">
    <h2>What Our Clients Say</h2>
    <div class="testimonial-slider">
        <button class="prev" onclick="moveSlide(-1, 'testimonial-container')">&#10094;</button>
        <div class="testimonial-container" id="testimonial-container">
            <div class="testimonial"><p>"Best event management company! Highly recommended."</p></div>
            <div class="testimonial"><p>"Seamless and professional execution. Loved it!"</p></div>
            <div class="testimonial"><p>"Made our wedding unforgettable! Thank you, Event4U."</p></div>
        </div>
        <button class="next" onclick="moveSlide(1, 'testimonial-container')">&#10095;</button>
    </div>
</section>

<script>
    // Scroll Animation
    document.addEventListener("scroll", function () {
        document.querySelectorAll(".scroll-reveal").forEach((section) => {
            const rect = section.getBoundingClientRect();
            if (rect.top < window.innerHeight - 100) {
                section.classList.add("show");
            }
        });
    });

    // Sliders
    function moveSlide(step, sliderId) {
        let slider = document.getElementById(sliderId);
        let slides = slider.children.length;
        let currentIndex = Math.abs(parseInt(slider.style.transform.replace(/[^0-9]/g, "")) / 100) || 0;
        let newIndex = (currentIndex + step + slides) % slides;
        slider.style.transform = `translateX(-${newIndex * 100}%)`;
    }

    setInterval(() => moveSlide(1, 'slider'), 3000);
    setInterval(() => moveSlide(1, 'testimonial-container'), 4000);
</script>
