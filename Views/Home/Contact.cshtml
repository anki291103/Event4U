@{
    ViewData["Title"] = "Contact Us - Event4U";
}

<style>
    /* Contact Us Banner */
    .contact-banner {
        width: 100%;
        height: 300px;
        background: url('/Images/contactus.jpg') no-repeat center center;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
        font-weight: bold;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.5);
    }

    /* Contact Section */
    .contact-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 50px;
        max-width: 1100px;
        margin: auto;
    }

    /* Left Side - Contact Info */
    .contact-info {
        width: 45%;
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

        .contact-info h2 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .contact-info p {
            font-size: 1.2rem;
            margin: 10px 0;
            color: #333;
        }

    /* Right Side - Google Map */
    .map-card {
        width: 50%;
        background: white;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    iframe {
        width: 100%;
        height: 300px;
        border-radius: 10px;
        border: none;
    }
</style>

<!-- Contact Us Banner -->
<div class="contact-banner">
    Contact Us
</div>

<!-- Contact Section -->
<div class="contact-container">
    <!-- Left Side - Contact Details -->
    <div class="contact-info">
        <h2>Event4U</h2>
        <p><strong>Address:</strong> 1234 Event Street, Downtown, New York, NY 10001</p>
        <p><strong>Contact Number:</strong> +1 234 567 890</p>
        <p><strong>Email:</strong> support@event4u.com</p>
    </div>

    <!-- Right Side - Google Map -->
    <div class="map-card">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.2928038787945!2d-74.0060156850476!3d40.71277557932909!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a17862efc3b%3A0x8b6a54e3c38df5ed!2sNew%20York%2C%20NY%2010001!5e0!3m2!1sen!2sus!4v1711882412345"
                allowfullscreen>
        </iframe>
    </div>
</div>
