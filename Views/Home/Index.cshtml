<script>
    // Image Slider
    let slides = document.querySelectorAll(".slide");
    let popupText = document.querySelector(".popup-text");
    let index = 0;

    function showNextSlide() {
        slides.forEach(slide => slide.style.opacity = 0);
        slides[index].style.opacity = 1;
        index = (index + 1) % slides.length;
    }

    function showPopup() {
        popupText.style.opacity = 1;
        setTimeout(() => {
            popupText.style.opacity = 0;
        }, 1000);
    }

    setInterval(showNextSlide, 3000);
    setInterval(showPopup, 2000);

    // Feedback Slider
    let feedbackIndex = 0;
    function slideFeedback() {
        let feedbackContainer = document.querySelector(".feedback-container");
        feedbackIndex = (feedbackIndex + 1) % 5;
        feedbackContainer.style.transform = `translateX(-${feedbackIndex * 20}%)`;
    }

    setInterval(slideFeedback, 4000);
</script>

