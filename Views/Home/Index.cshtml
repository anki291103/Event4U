@{
    ViewData["Title"] = "Home - Event4U";
}

<style>
    /* Slider Section */
    .slider-container {
        position: relative;
        width: 100%;
        height: 500px;
        overflow: hidden;
    }

        .slider-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

    /* Event4U Pop-up */
    .popup-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 3rem;
        color: white;
        background: rgba(0, 0, 0, 0.7);
        padding: 15px 25px;
        border-radius: 10px;
        opacity: 0;
        transition: opacity 1s ease-in-out;
    }

    /* Event Cards Section */
    .event-section {
        text-align: center;
        padding: 50px 0;
        background: #f5f5f5;
    }

    .event-cards {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .event-card {
        width: 250px;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        position: relative;
        color: white;
        overflow: hidden;
    }

        /* Blurred Background Image for Each Card */
        .event-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            filter: blur(6px);
            z-index: -1;
        }

        .event-card:nth-child(1) {
            background: url('/Images/wedcard.jpg') no-repeat center/cover;
        }

        .event-card:nth-child(2) {
            background: url('/Images/corporatecard.jpg') no-repeat center/cover;
        }

        .event-card:nth-child(3) {
            background: url('/Images/concertcard.PNG') no-repeat center/cover;
        }

        .event-card:nth-child(4) {
            background: url('/Images/birthdaycard.jpg') no-repeat center/cover;
        }

        .event-card::before {
            backdrop-filter: blur(6px);
        }

        .event-card h3, .event-card p {
            position: relative;
            z-index: 1;
            background: rgba(0, 0, 0, 0.5);
            padding: 10px;
            border-radius: 5px;
        }

    /* Feedback Section */
    .feedback-section {
        background: #222;
        color: white;
        padding: 50px 0;
        text-align: center;
    }

    .feedback-slider {
        width: 80%;
        margin: auto;
        overflow: hidden;
        position: relative;
    }

    .feedback-container {
        display: flex;
        width: 500%;
        transition: transform 1s ease-in-out;
    }

    .feedback {
        width: 20%;
        padding: 20px;
        box-sizing: border-box;
    }

        .feedback p {
            font-size: 1.2rem;
            font-style: italic;
        }
</style>

