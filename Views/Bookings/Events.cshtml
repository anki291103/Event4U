@{
    ViewData["Title"] = "Events - Event4U";
}

<style>
    .events-container {
        text-align: center;
        padding: 50px 0;
        background: #f5f5f5;
    }

    .event-section {
        margin: 50px auto;
        width: 80%;
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .event-title {
        font-size: 2.5rem;
        font-weight: bold;
        font-style: italic;
    }

    .event-description {
        font-size: 1.2rem;
        margin-top: 10px;
        color: #555;
    }

    .slider {
        position: relative;
        width: 100%;
        height: 500px;
        overflow: hidden;
        margin-top: 20px;
    }

        .slider img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }

            .slider img.active {
                display: block;
            }

    .image-date {
        margin-top: 10px;
        font-size: 1rem;
        color: #777;
    }

    .book-now {
        display: block;
        text-align: center;
        margin-top: 30px;
    }

        .book-now a {
            background: #007bff;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            font-size: 1.5rem;
            border-radius: 5px;
        }
</style>

<div class="events-container">
    <h1>Events Organized</h1>

    <div class="event-section">
        <h2 class="event-title">Weddings</h2>
        <p class="event-description">Event4U transforms weddings into unforgettable experiences with stunning decor, seamless planning, and top-tier coordination.</p>
        <div class="slider" id="wedding-slider">
            <img src="/Images/wedding1.jpg" class="active" data-date="March 15, 2020">
            <img src="/Images/wedding2.jpg" data-date="April 20, 2022">
            <img src="/Images/wedding3.jpg" data-date="May 10, 2023">
            <img src="/Images/wedding4.jpg" data-date="October 7, 2024">
        </div>
        <p class="image-date" id="wedding-date"></p>
    </div>

    <div class="event-section">
        <h2 class="event-title">Corporate Events</h2>
        <p class="event-description">From conferences to networking meetups, Event4U ensures professional execution, advanced tech setup, and smooth logistics.</p>
        <div class="slider" id="corporate-slider">
            <img src="/Images/corporate1.jpg" class="active" data-date="February 5, 2021">
            <img src="/Images/corporate2.jpg" data-date="March 18, 2022">
            <img src="/Images/corporate3.jpg" data-date="April 8, 2023">
            <img src="/Images/corporate4.jpg" data-date="March 5, 2024">
        </div>
        <p class="image-date" id="corporate-date"></p>
    </div>

    <div class="event-section">
        <h2 class="event-title">Concerts</h2>
        <p class="event-description">We bring concerts to life with dazzling stage setups, sound perfection, and immersive audience experiences.</p>
        <div class="slider" id="concert-slider">
            <img src="/Images/concert1.jpg" class="active" data-date="January 22, 2022">
            <img src="/Images/concert2.jpg" data-date="March 10, 2022">
            <img src="/Images/concert3.jpg" data-date="April 30, 2023">
            <img src="/Images/concert4.jpg" data-date="December 25, 2024">
        </div>
        <p class="image-date" id="concert-date"></p>
    </div>

    <div class="event-section">
        <h2 class="event-title">Birthday Parties</h2>
        <p class="event-description">Event4U makes birthdays special with custom themes, fun activities, and personalized decorations.</p>
        <div class="slider" id="birthday-slider">
            <img src="/Images/birthday1.jpg" class="active" data-date="February 14, 2020">
            <img src="/Images/birthday2.jpg" data-date="March 25, 2021">
            <img src="/Images/birthday3.jpg" data-date="April 12, 2022">
            <img src="/Images/birthday4.jpg" data-date="November 26, 2023">
        </div>
        <p class="image-date" id="birthday-date"></p>
    </div>

    <div class="book-now">
        <a href="@Url.Action("book", "Bookings")">Book Us Now</a>
    </div>
    
</div>

<script>
    function initSliders() {
        let sliders = document.querySelectorAll(".slider");
        sliders.forEach(slider => {
            let images = slider.querySelectorAll("img");
            let dateElement = slider.nextElementSibling;
            let index = 0;

            function showNextImage() {
                images[index].classList.remove("active");
                index = (index + 1) % images.length;
                images[index].classList.add("active");
                dateElement.textContent = images[index].getAttribute("data-date");
            }

            dateElement.textContent = images[index].getAttribute("data-date");
            setInterval(showNextImage, 3000);
        });
    }
    document.addEventListener("DOMContentLoaded", initSliders);
</script>
