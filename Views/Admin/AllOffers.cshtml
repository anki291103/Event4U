@model IEnumerable<Event4U.Models.Offer>

@{
    ViewBag.Title = "All Offers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Offers</h2>
<a href="@Url.Action("Index", "Admin")" class="btn btn-secondary mb-3">Back to Dashboard</a>

<div class="container">
    <a href="@Url.Action("AddOffer", "Admin")" class="btn btn-primary mb-3">Add New Offer</a>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var offer in Model)
                {
                    <tr>
                        <td>@offer.Description</td>
                        <td>@offer.CreatedAt.ToString("dd MMM yyyy")</td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteOffer", "Admin", new { id = offer.OfferId }, new
                            {
                                @class = "btn btn-danger btn-sm",
                                onclick = "return confirm('Are you sure you want to delete this offer?');"
                            })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No offers available.</p>
    }
</div>
