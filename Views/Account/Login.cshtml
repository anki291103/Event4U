@model Event4U.Models.User

@{
    ViewBag.Title = "Login";
}

<style>
    /* Full-page background with blur effect */
    body {
        background: url('/Images/login.jpg') no-repeat center center fixed;
        background-size: cover;
        backdrop-filter: blur(8px);
    }

    /* Center the login form while keeping the navbar at the top */
    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: calc(100vh - 80px); /* Adjust height so it doesn't overlap the navbar */
    }

    /* Login Card Styling */
    .login-card {
        background: white;
        padding: 30px;
        border-radius: 10px;
        width: 400px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    /* Input Fields */
    .form-control {
        text-align: center;
        width: 100%; /* or 130% depending on your preference */
        max-width: 450px; /* Prevents it from stretching too much */
        padding: 14px 18px;
        font-size: 1.1rem;
        border-radius: 8px;
        box-sizing: border-box;
        margin: 0 auto;
    }


    /* Buttons */
    .btn-primary, .btn-secondary {
        width: 120px;
    }

    /* Register button now matches the login button */
    .btn-secondary {
        background-color: #007bff !important; /* Bootstrap primary blue */
        border-color: #007bff !important;
        color: white !important;
    }
</style>

<!-- Centered Login Form -->
<div class="login-container">
    <div class="login-card">
        <h2>Login</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                <div class="form-group">
                    @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                    <div>
                        @Html.TextBox("email", "", new { @class = "form-control", placeholder = "Enter your email" })
                    </div>
                </div>

                <div class="form-group mt-3">
                    @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                    <div>
                        @Html.Password("password", "", new { @class = "form-control", placeholder = "Enter your password" })
                    </div>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Login" class="btn btn-primary" />
                    @Html.ActionLink("Register", "Register", "Account", new { area = "" }, new { @class = "btn btn-secondary ml-2" })
                </div>
            </div>
        }

        <p style="color: red; margin-top: 10px;">@ViewBag.Message</p>
    </div>
</div>
